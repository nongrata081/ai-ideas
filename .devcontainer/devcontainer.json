{
  "name": "enterprise-helper-image",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20-bookworm",
  "runArgs": ["--name", "enterprise-helper-container"],
  "postCreateCommand": "chmod +x ./.devcontainer/post_create.sh && ./.devcontainer/post_create.sh",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "mounts": [
    "target=${containerWorkspaceFolder}/node_modules,type=volume",
    "target=${containerWorkspaceFolder}/ai-ideas-nextra/node_modules,type=volume"
  ],
  "forwardPorts": [3000]
}
